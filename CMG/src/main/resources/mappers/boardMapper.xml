<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cmg.mapper.boardMapper">
<select id="listAll" resultType="boardVO">
select b_id, b_title, b_writer, b_date, b_cnt
from board 
order by b_id desc
</select>

<select id="read" resultType="boardVO">
select * 
from board
where b_id = #{b_id}
</select>

<update id="cntup">
update board set b_cnt=b_cnt+1 where b_id = #{b_id}
</update>

<insert id="register">
insert into board 
values (seq_board_id.nextval, #{b_title}, #{b_text}, #{b_writer}, sysdate, 0)
</insert>

<delete id="remove">
delete from board where b_id = #{b_id}
</delete>

<update id="modify">
update board set b_title=#{b_title}, b_text=#{b_text} where b_id = #{b_id}
</update>

</mapper>